        <Grid.RowDefinitions>
            <RowDefinition Height="20*">
            </RowDefinition>

            <RowDefinition Height="11*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="106*"/>

            </Grid.RowDefinitions>

            <TextBox x:Name="AllTextBox1" Grid.Row="1" FontSize="30" HorizontalContentAlignment="Center" IsReadOnly="True"/>



            <Label x:Name="CharsSpeed1"  Grid.Row="0" Content="Speed: 0 chars/min" FontSize="17" Margin="0,0,815,49"/>
            <Label x:Name="FailCount1" Width="100" Grid.Row="0" Content="Fails: 0" HorizontalAlignment="Left"  FontSize="17" Margin="0,47,0,5"/>

            <Button x:Name="StartButton" Content="Start" Grid.Row="0" Margin="211,0,638,53" MaxWidth="200" MaxHeight="40"/>
            <Button x:Name="ReStartButton" Content="Restart" Grid.Row="0" Margin="211,43,638,10" MaxWidth="200" MaxHeight="40"/>
            <Button x:Name="GoToTrainingButton1"  Grid.Row="0" Content="Training" Margin="431,43,431,10" MaxWidth="200" MaxHeight="40"/>
            <Button x:Name="GetTextButton" Content="Load Text" Grid.Row="0" Margin="431,1,431,54" MaxWidth="200" MaxHeight="40"/>

            <CheckBox x:Name="HideKeyBoardCheckBox1" Grid.Row="0" Content="Hide KeyBoard" HorizontalAlignment="Right"  Margin ="0,27,235,31" FontSize="17" Width="143"/>

            <Label x:Name ="TimeLabel"  Grid.Row="0" Content="Time: 1:00" FontSize="30" HorizontalContentAlignment="Center" Margin="784,10,10,23" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
        </Grid>


        <Grid x:Name="KeyBoardButtons" Margin="0,4,0,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column ="0" Grid.Row="0">`</Button>
            <Button Grid.Column="1" Grid.Row="0">1</Button>
            <Button Grid.Column="2" Grid.Row="0">2</Button>
            <Button Grid.Column="3" Grid.Row="0">3</Button>
            <Button Grid.Column="4" Grid.Row="0">4</Button>
            <Button Grid.Column="5" Grid.Row="0">5</Button>
            <Button Grid.Column="6" Grid.Row="0">6</Button>
            <Button Grid.Column="7" Grid.Row="0">7</Button>
            <Button Grid.Column="8" Grid.Row="0">8</Button>
            <Button Grid.Column="9" Grid.Row="0">9</Button>
            <Button Grid.Column="10" Grid.Row="0">0</Button>
            <Button Grid.Column="11" Grid.Row="0">-</Button>
            <Button Grid.Column="12" Grid.Row="0">=</Button>
