<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MaxHeight="450" MinWidth="800" MaxWidth="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Name="LoginTB" Grid.Row="0" Width="500" Margin="10" FontSize="25" VerticalContentAlignment="Center"/>
        <Label Content="UserName:" Grid.Row="0" HorizontalAlignment="Left" FontSize="26" VerticalContentAlignment="Center"/>

        <TextBox Name="PasswordTB" Grid.Row="1" Width="500" Margin="10" FontSize="25" VerticalContentAlignment="Center"/>
        <Label Content="Password:" Grid.Row="1" HorizontalAlignment="Left" FontSize="26" VerticalContentAlignment="Center"/>

        <Grid Grid.Row="2" x:Name="Place1"/>

        <RadioButton x:Name="LoginRB" IsChecked="True" Width="150" Margin="5"  Content="Login" FontSize="30" Grid.Row="4" HorizontalAlignment="Left" Checked="LoginRB_Checked"/>
        <RadioButton x:Name="SignUpRB" Width="150" Margin="160,5,0,5"  Content="Sign Up" FontSize="30" Grid.Row="4" HorizontalAlignment="Left" Checked="SignUpRB_Checked"/>

        <Button x:Name="ButtonNext" Content="Next" FontSize="30" Width="100" Margin="5" Grid.Row="5" HorizontalAlignment="Right" Click="ButtonNext_Click"/>

    </Grid>
</Window>
