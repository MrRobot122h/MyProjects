<Window x:Class="Client.Group_Windows.DeleteGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Group_Windows"
        mc:Ignorable="d"
        Title="DeleteGroup" Height="90" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" VerticalAlignment="Center">Group Name:</Label>
        <TextBox x:Name="Name_TextBox"  Grid.Column="1" Margin="4,4,4,4"></TextBox>
        <Button x:Name="Delete_Button"  Grid.Column="2" Width="70" Margin="5" HorizontalAlignment="Right" Click="Delete_Button_Click">Delete</Button>
    </Grid>
</Window>
